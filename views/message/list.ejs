
    <!--우측 상단 헤더 영역 -->
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>메시지 목록</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="/">Home ></a>
                </li>
                <li>
                    <a>메시지 목록 ></a>
                </li>
                <li class="active">
                    <strong>조회</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-2">
        </div>
    </div>

    <!--우측 콘텐츠 영역 -->
    <div class="wrapper wrapper-content">
        
        <!-- 사용자 정보 조회 옵션 및 조회 영역 -->
        <form action="/message/list" method="post">
            <div class="ibox-content m-b-sm border-bottom">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label" for="msgTypeCode">메시지타입</label>
                            <select name="msgTypeCode" class="form-control">
                                <option value="9" selected>전체선택</option>
                                <option value="0">퇴장</option>
                                <option value="1">입장</option>
                                <option value="3">일반메세지</option>
                                <option value="4">파일메세지</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label" for="nickName">닉네임</label>
                            <input type="text" name="nickName" class="form-control">
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label" for="ipAddress">IP주소</label>
                            <input type="text" name="ipAddress" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">조회</button>
                    <a href="/message/create" class="btn btn-info">신규</a>
                </div>
            </div>
        </form>
        <!-- 사용자 정보 조회 결과 목록 -->
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th width="10%">순번</th>
                                        <th width="10%">채널번호</th>
                                        <th width="10%">메시지타입</th>
                                        <th width="20%">닉네임</th>
                                        <th width="20%">IP주소</th>
                                        <th width="10%">작성자ID</th>
                                        <th width="20%">등록일시</th>
                                    </tr>
                                </thead>
                                <tbody class="hoverTblBody">
                                    <% for(var i=0; i < messages.length; i++) { %>
                                    <tr>
                                        <td><a href="/message/modify/<%=messages[i].channel_msg_id%>"><%=messages.length -i%></a></td>
                                        <td><%=messages[i].channel_id%></td>
                                        <td>
                                            <% if(messages[i].msg_type_code == 0) { %>
                                                퇴장
                                            <% } else if(messages[i].msg_type_code == 1) { %>
                                                입장
                                            <% } else if(messages[i].msg_type_code == 3) { %>
                                                일반메세지
                                            <% } else { %>
                                                파일메세지
                                            <% } %>
                                        </td>
                                        <td><%=messages[i].nick_name%></td>
                                        <td><%=messages[i].ip_address%></td>
                                        <td><%=messages[i].member_id%></td>
                                        <td><%=moment(messages[i].msg_date).format('YYYY-MM-DD HH:mm')%></td>
                                    </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script>
    </script>
